{
  "scripts": {
    "serve": "cross-env NODE_ENV=development concurrently \"postcss public/tailwind.css -o public/build/tailwind.css --watch\"  \"lite-server\"",
    "development": "cross-env NODE_ENV=development postcss public/tailwind.css -o build/tailwind.css",
    "production": "cross-env NODE_ENV=production postcss public/tailwind.css -o build/tailwind.css",
    "start": "npm run serve"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.4.0",
    "autoprefixer": "^10.2.4",
    "tailwindcss": "^2.0.3"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "lite-server": "^2.6.1",
    "postcss-cli": "^8.3.1"
  }
}
